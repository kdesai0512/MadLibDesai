<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/borderTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="8dp"
            android:text="-MADLIBS-MADLIBS-MADLIBS-MADLIBS-MADLIBS-MADLIBS-"
            android:textColor="@android:color/background_dark"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="421dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:text="MAD LIBS"
            android:textColor="#F0E797"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.058" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:layout_marginEnd="@dimen/end"
            android:background="#00E91E63"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Name:"
            android:textColor="@color/pink"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/name"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.138" />

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.147" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:layout_marginEnd="@dimen/end"
            android:background="#00E91E63"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Feeling:"
            android:textColor="@color/purple"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/adjective"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/adjective"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginTop="@dimen/top"
            android:layout_marginBottom="444dp"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginTop="@dimen/top"
            android:layout_marginEnd="@dimen/end"
            android:fontFamily="monospace"
            android:text="Object:"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/noun"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/noun"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginTop="16dp"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adjective" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/width"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:layout_marginEnd="@dimen/end"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Verb (past tense):"
            android:textColor="@color/orange"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verb"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/verb"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginTop="16dp"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noun" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:layout_marginEnd="@dimen/end"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Number:"
            android:textColor="@color/pink"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/number"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/number"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginTop="@dimen/top"
            android:hint="                                 "
            android:inputType="numberDecimal"
            android:textColor="#0A0101"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verb"
            app:layout_constraintVertical_bias="0.031" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Place:"
            android:textColor="@color/purple"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/place"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/place"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginTop="@dimen/top"
            android:layout_marginBottom="8dp"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number"
            app:layout_constraintVertical_bias="0.003" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Animal:"
            android:textColor="@color/green"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/animal"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.008" />

        <EditText
            android:id="@+id/animal"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginBottom="8dp"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place"
            app:layout_constraintVertical_bias="0.036" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="@dimen/width"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/start"
            android:layout_marginTop="@dimen/top"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Verb (present tense):"
            android:textColor="@color/orange"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/animal"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/verb2"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_marginBottom="8dp"
            android:hint="                                 "
            android:textColor="#0A0101"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animal"
            app:layout_constraintVertical_bias="0.039" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/start"
            android:layout_marginBottom="8dp"
            android:onClick="fillInTheBlanks"
            android:text="STORY 1"
            android:background="@color/green"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.212" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:onClick="fillInTheBlanks2"
            android:text="STORY 2"
            android:background="@color/green"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.212" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start"
            android:layout_marginBottom="8dp"
            android:onClick="fillInTheBlanks3"
            android:text="STORY 3"
            android:background="@color/green"
            android:textSize="@dimen/word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.212" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="421dp"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="#F0E797"
            android:background="@drawable/gradient"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.259" />

        <TextView
            android:id="@+id/borderBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:text="-MADLIBS-MADLIBS-MADLIBS-MADLIBS-MADLIBS-MADLIBS-"
            android:textColor="@android:color/background_dark"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>